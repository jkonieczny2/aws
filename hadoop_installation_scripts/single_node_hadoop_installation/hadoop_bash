# Set Hadoop-related environment variables
export HADOOP_HOME=/usr/local/hadoop/hadoop-2.7.5
export HADOOP_CONF_DIR=/usr/local/hadoop/hadoop-2.7.5/etc/hadoop
export HADOOP_MAPRED_HOME=/usr/local/hadoop/hadoop-2.7.5
export HADOOP_COMMON_HOME=/usr/local/hadoop/hadoop-2.7.5
export HADOOP_HDFS_HOME=/usr/local/hadoop/hadoop-2.7.5
export YARN_HOME=/usr/local/hadoop/hadoop-2.7.5


# Set JAVA_HOME
export JAVA_HOME=JRE_PATH
export PATH=$PATH:$JAVA_HOME/bin


# Add Hadoop bin/ directory to PATH
export PATH=$PATH:/usr/local/hadoop/hadoop-2.7.5/bin
